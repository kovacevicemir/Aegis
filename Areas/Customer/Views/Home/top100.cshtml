@model Aegis.Models.ViewModels.Top100ViewModel
@{
    ViewData["Title"] = "top100";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    var i = 1;
}
<h2>Top 100 - @Model.RankBy</h2>
@if (Model.PlayerRanking.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Rank</th>
                <th scope="col">Nickname</th>
                <th scope="col">Level</th>
                <th scope="col">Exp</th>
                <th scope="col">Gold</th>
                <th scope="col">Power</th>
                <th scope="col">Guild</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PlayerRanking)
            {
            <tr>
                <th scope="row">@i</th>
                <td><a class="text-decoration-none" style="color:black;" asp-action="Index" asp-controller="PlayerProfile" asp-route-id="@item.Id">@item.Nickname</a></td>
                <td>@item.Level</td>
                <td>@item.Experience</td>
                <td>@item.Gold</td>
                <td>@item.TotalAttack</td>
                <td><a class="text-decoration-none" style="color:black;" asp-controller="Guild" asp-action="Index" asp-route-id="@item.GuildId">@item.GuildName</a></td>
            </tr>
            i++;
            }
        </tbody>
    </table>
}

@if (Model.CrewRanking.Count() > 0)
{
    <table class="table table-striped">
        <tbody>
            @foreach (var item in Model.PlayerRanking)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.Gold</td>
                </tr>
                i++;
           }
        </tbody>
    </table>
}



