@page
@using Aegis.Utility
@model RegisterModel


@{
    ViewData["Title"] = "Register";
}

<br />
<h2 class="text-info">Create a New Account</h2>
<br />

<form method="post" asp-route-returnUrl="@Model.ReturnUrl" style="min-width:530px;">
    <div class="border p-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Email" class="col-form-label"></label>
            </div>
            <div class="col-7">
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Nickname" class="col-form-label"></label>
            </div>
            <div class="col-7">
                <input asp-for="Input.Nickname" class="form-control" />
            </div>
            <span asp-validation-for="Input.Nickname" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Password" class="col-form-label"></label>
            </div>
            <div class="col-7">
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
            </div>
            <div class="col-7">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label>Class</label>
            </div>
            <div class="col-5">
                <input type="radio" name="rdUserRole" value="@SD.Knight" checked /> @SD.Knight
                <input type="radio" name="rdUserRole" value="@SD.Archer"  /> @SD.Archer
                <input type="radio" name="rdUserRole" value="@SD.Mage"  /> @SD.Mage
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                
            </div>
            <div class="col-5">
                <p>@SD.KnightDescription</p>
                <p>@SD.ArcherDescription</p>
                <p>@SD.MageDescription</p>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <button type="submit" class="btn btn-primary form-control">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}